<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dripio" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sora_regular</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Dripio.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/sora_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.14" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.12" parent="Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.16" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.18" parent="Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.24" parent="Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.32" parent="Text">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.14.Bold" parent="Text.Bold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.16.Bold" parent="Text.Bold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.18.Bold" parent="Text.Bold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.24.Bold" parent="Text.Bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.32.Bold" parent="Text.Bold">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Payment.Prefix" parent="Text.Bold">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Payment.Value" parent="Text">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ClickableText" parent="Text.Bold">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="DangerButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="rippleColor">@color/red</item>
    </style>
</resources>