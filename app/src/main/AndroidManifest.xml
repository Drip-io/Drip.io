<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name="com.dripio.ApplicationInitialization"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dripio.NoActionBarAndStatusBar"
        tools:targetApi="31">
        <activity
            android:name="com.dripio.presentation.expenses.editor.ExpenseEditorActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.dripio.presentation.expenses.list.ExpenseListActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.dripio.presentation.paymentEditor.PaymentEditorActivity"
            android:exported="false" />
        <activity
            android:name="com.dripio.presentation.paymentMethods.editor.PaymentMethodEditorActivity"
            android:exported="false" />
        <activity
            android:name="com.dripio.presentation.paymentMethods.list.PaymentMethodListActivity"
            android:exported="false" />
        <activity
            android:name="com.dripio.presentation.payments.PaymentsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>